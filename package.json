{
  "name": "jump-to-tests",
  "displayName": "Jump to Tests",
  "description": "Switch between the code and the test file",
  "version": "1.0.44",
  "publisher": "schmas",
  "engines": {
    "vscode": "^1.44.0"
  },
  "repository": {
    "url": "https://github.com/schmas/vscode-jump-to-tests"
  },
  "icon": "images/jump-to-tests.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jump-to-tests.jump"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Jump to Tests",
      "properties": {
        "jump-to-tests.rules": {
          "type": "array",
          "description": "Additional rules - see extension description",
          "default": [],
          "scope": "resource"
        },
        "jump-to-tests.logLevel": {
          "type": "string",
          "enum": [
            "DEBUG",
            "INFO",
            "WARN",
            "ERROR",
            "NONE"
          ],
          "default": "INFO",
          "markdownDescription": "Log Level",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "jump-to-tests.jump",
        "title": "Jump to Tests: Jump"
      }
    ],
    "keybindings": [
      {
        "command": "jump-to-tests.jump",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run lint && npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint '*/**/*.{js,ts}' --fix",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "prune-branches": "git remote prune origin",
    "clean": "git clean -fdX",
    "get-vscode-version": "echo $npm_package_engines_vscode",
    "get-project-name": "echo $npm_package_name",
    "package": "vsce package",
    "deploy": "vsce publish",
    "changelog": "auto-changelog -p --unreleased --commit-limit false",
    "changelog-release": "auto-changelog -p -u --commit-limit false --template .changelog-github-template.hbs --unreleased --stdout",
    "changelog-debug": "auto-changelog -p --template json --output changelog-data.json",
    "version": "auto-changelog -p --unreleased --commit-limit false && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "auto-changelog": "^2.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "mocha": "^7.1.1",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "tsc --noEmit",
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.15"
  },
  "auto-changelog": {
    "commitLimit": false,
    "unreleased": true,
    "template": ".changelog-template.hbs",
    "includeBranch": [
      "master"
    ]
  }
}
